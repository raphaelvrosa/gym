{
    "id": "001",
    "name": "Tests bypass container VNF",
    "version": "0.1",
    "author": "VNF Benchmark Report",
    "description": "Tests bypass container VNF",
    "vnf": {
        "id": "vnf-bypass",
        "name": "vnf/bypass:0.1",
        "version": "0.1",
        "author": "Test case",
        "description": "bypass VNF"
    },
    "environment": {
        "name": "Execution-Environment",
        "description": "Esablishes scenario in containernet",
        "deploy": true,
        "orchestrator": {
            "type": "containernet",
            "description": "Uses containernet to deploy vnfbd scenario",
            "parameters": {
                "address": {
                    "input": "address",
                    "value": "localhost:57000"
                }
            }
        }
    },
    "inputs": {
        "variables": {
            "vnf_vcpu": {
                "name": "vnf_vcpu",
                "values": ["1", "2"],
                "path": "/scenario/nodes[id='d2']/resources/cpu/vcpus",
                "class": "resource",
                "type": "uint32"
            },
            "vnf_memory": {
                "name": "vnf_memory",
                "values": ["2048"],
                "path": "/scenario/nodes[id='d2']/resources/memory/size",
                "class": "resource",
                "type": "uint32"
            }
        },
        "vnfbd": {
            "experiments": {
                "trials": 2,
                "tests": 2
            },
            "scenario": {
                "nodes": {
                    "d1": {
                        "id": "d1",
                        "type": "internal",
                        "image": "raphaelvrosa/gym:latest",
                        "format": "docker",
                        "role": "agent",
                        "resources": {
                            "cpu": {
                                "vcpus": 1,
                                "cpu_bw": "1.0",
                                "pinning": ""
                            },
                            "memory": {
                                "size": 512,
                                "unit": "MB"
                            },
                            "storage": {
                                "size": 2,
                                "unit": "GB"
                            }
