{
    "id": "003",
    "name": "Tests Suricata container VNF",
    "version": "0.01",
    "author": "VNF Developer",
    "description": "Tests Suricata container VNF",
    "experiments": {
        "trials": "{{ settings_trials | int }}",
        "tests": "{{ settings_tests | int }}"
    },
    "environment": {
        "name": "Execution-Environment",
        "description": "Esablishes scenario in containernet",
        "deploy": true,
        "plugin": {
            "type": "containernet",
            "parameters": {
                "address": {
                    "input": "address",
                    "value": "172.17.0.1:9090"
                }
            }
        }
    },
    "targets": {
        "vnf-sut-02": {
            "id": "vnf-sut-02",
            "name": "vnf/suricata:0.1",
            "version": "0.1",
            "author": "Test case",
            "description": "Suricata VNF"
        }
    },
    "scenario": {
        "nodes": {
            "d1": {
                "id": "d1",
                "type": "internal",
                "image": "raphaelvrosa/gym:latest",
                "format": "docker",
                "role": "agent",
                "resources": {
                    "cpu": {
                        "vcpus": 1,
                        "cpu_bw": "1.0",
                        "pinning": ""
                    },
                    "memory": {
                        "size": 512,
                        "unit": "MB"
                    },
                    "storage": {
                        "size": 2,
                        "unit": "GB",
                        "volumes": "/mnt/pcaps/:/mnt/pcaps:rw"
                    }
                },
                "connection_points": {
                    "eth1": {
                        "id": "eth1",
                        "interface": "ipv4",
                        "type": "internal",
                        "address": "172.31.1.1/24"
                    }
                },
                "relationships": {},
                "lifecycle": {
                    "start": {
                        "workflow": "start",
                        "name": "",
                        "parameters": {
                            "host_id": {
                                "input": "host_id",
                                "value": "d1"
                            },
                            "host_ip": {
                                "input": "host_ip",
                                "value": "get_attrib:ip"
                            }
                        },
                        "implementation": [
                            "gym-agent --uuid {host_id} --address {host_ip}:50055 > gym-agent.log 2>&1 &"
                        ]
                    }
                }
            },
            "d2": {
                "id": "d2",
                "type": "internal",
                "image": "vnf/suricata:0.1",
                "format": "docker",
                "role": "sut",
                "resources": {
                    "cpu": {
                        "vcpus": "{{ sut_resources_vcpus }}",
                        "cpu_bw": "{{ sut_resources_cpubw }}",
                        "pinning": ""
                    },
                    "memory": {
                        "size": "{{ sut_resources_memory_size | int }}",
                        "unit": "MB"
                    },
                    "storage": {
                        "size": 2,
                        "unit": "GB",
                        "volumes": ""
                    }
                },
                "connection_points": {
                    "input": {
                        "id": "input",
                        "interface": "ipv4",
                        "type": "internal",
                        "address": "172.31.1.2/24"
                    },
                    "output": {
                        "id": "output",
                        "interface": "ipv4",
                        "type": "internal",
                        "address": "172.31.1.3/24"
                    }
                },
                "relationships": {},
                "lifecycle": {
                    "start": {
                        "workflow": "start",
                        "parameters": {
                            "configuration": {
                                "input": "configuration",
                                "value": "{{ sut_configuration }}"
                            }
                        },                            
                        "implementation": [
                            "./start.sh {configuration}"
                        ]
                    }
                }
            },
            "d3": {
                "id": "d3",
                "type": "internal",
                "image": "raphaelvrosa/gym:latest",
                "format": "docker",
                "role": "agent",
                "resources": {
                    "cpu": {
                        "vcpus": 1,
                        "cpu_bw": "1.0",
                        "pinning": ""
                    },
                    "memory": {
                        "size": 512,
                        "unit": "MB"
                    },
                    "storage": {
                        "size": 2,
                        "unit": "GB",
                        "volumes": ""
                    }
                },
                "connection_points": {
                    "eth1": {
                        "id": "eth1",
                        "interface": "ipv4",
                        "type": "internal",
                        "address": "172.31.1.4/24"
                    }
                },
                "relationships": {},
                "lifecycle": {
                    "start": {
                        "workflow": "start",
                        "name": "",
                        "parameters": {
                            "host_id": {
                                "input": "host_id",
                                "value": "d3"
                            },
                            "host_ip": {
                                "input": "host_ip",
                                "value": "get_attrib:ip"
                            }
                        },
                        "implementation": [
                            "gym-agent --uuid {host_id} --address {host_ip}:50055 > gym-agent.log 2>&1 &"
                        ]
                    }
                }
            },
            "d4": {
                "id": "d4",
                "type": "external",
                "image": "",
                "format": "process",
                "role": "monitor",
                "resources": {},
                "connection_points": {},
                "relationships": {
                    "d4-inside-d1": {
                        "name": "d4-inside-d2",
                        "type": "AttachesTo",
                        "target": "d2"
                    }
                },
                "lifecycle": {
                    "start": {
                        "workflow": "start",
                        "name": "",
                        "parameters": {
                            "host_id": {
                                "input": "host_id",
                                "value": "d4"
                            },
                            "host_ip": {
                                "input": "host_ip",
                                "value": "get_attrib:ip"
                            }
                        },
                        "implementation": [
                            "gym-monitor --uuid {host_id} --address {host_ip}:50056  > gym-monitor.log 2>&1 &"
                        ]
                    }
                }
            },
            "d5": {
                "id": "d5",
                "type": "internal",
                "image": "",
                "format": "process",
                "role": "monitor",
                "resources": {},
                "connection_points": {},
                "relationships": {
                    "d4-inside-d1": {
                        "name": "d4-inside-d2",
                        "type": "HostedOn",
                        "target": "d2"
                    }
                },
                "lifecycle": {
                    "start": {
                        "workflow": "start",
                        "name": "",
                        "parameters": {
                            "host_id": {
                                "input": "host_id",
                                "value": "d5"
                            },
                            "host_ip": {
                                "input": "host_ip",
                                "value": "get_attrib:ip"
                            }
                        },
                        "implementation": [
                            "gym-monitor --uuid {host_id} --address {host_ip}:50056  > gym-monitor.log 2>&1 &"
                        ]
                    }
                }
            },
            "d6": {
                "id": "d6",
                "type": "internal",
                "image": "raphaelvrosa/gym:latest",
                "format": "docker",
                "role": "manager",
                "resources": {
                    "cpu": {
                        "vcpus": 1,
                        "cpu_bw": "",
                        "pinning": ""
                    },
                    "memory": {
                        "size": 1024,
                        "unit": ""
                    },
                    "storage": {
                        "size": 1,
                        "unit": "",
                        "volumes": ""
                    }
                },
                "connection_points": {},
                "relationships": {},
                "lifecycle": {
                    "start": {
                        "workflow": "start",
                        "name": "",
                        "parameters": {
                            "host_id": {
                                "input": "host_id",
                                "value": "d6"
                            },
                            "host_ip": {
                                "input": "host_ip",
                                "value": "get_attrib:ip"
                            }
                        },
                        "implementation": [
                            "gym-manager --uuid {host_id} --address {host_ip}:50057 > gym-mngr.log 2>&1 &"
                        ]
                    }
                }
            }
        },
        "links": {
            "1": {
                "id": "1",
                "name": "d1-d2",
                "type": "E-Line",
                "network": "s1",
                "connection_points": [
                    "d1:eth1",
                    "d2:input"
                ]
            },
            "2": {
                "id": "2",
                "name": "d2-d3",
                "type": "E-Line",
                "network": "s2",
                "connection_points": [
                    "d2:output",
                    "d3:eth1"
                ]
            }
        },
        "policies": {}
    },
    "proceedings": {
        "attributes": {
            "duration": {
                "name": "duration",
                "value": "30"
            }
        },
        "agents": {
            "1": {
                "uuid": "1",
                "name": "",
                "probers": {
                    "1": {
                        "id": 6,
                        "instances": 1,
                        "name": "tcpreplay",
                        "parameters": {
                            "duration": {
                                "input": "duration",
                                "value": "{{ procs_duration }}"
                            },
                            "speed": {
                                "input": "speed",
                                "value": "{{ procs_agent1_speed }}"
                            },
                            "timing": {
                                "input": "timing",
                                "value": "{{ procs_agent1_timing }}"
                            },
                            "loop": {
                                "input": "loop",
                                "value": "{{ procs_agent1_loop }}"
                            },
                            "preload": {
                                "input": "preload",
                                "value": "{{ procs_agent1_preload }}"
                            },
                            "interface": {
                                "input": "interface",
                                "value": "{{ procs_agent1_interface }}"
                            },
                            "pcap": {
                                "input": "pcap",
                                "value": "{{ procs_agent1_pcap }}"
                            }
                        }
                    }
                }
            }
        },
        "monitors": {
            "2": {
                "uuid": "2",
                "name": "",
                "listeners": {
                    "1": {
                        "id": 11,
                        "instances": 1,
